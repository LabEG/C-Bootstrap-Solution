{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "checkJs": true,
    "diagnostics": false,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
      "ScriptHost"
    ],
    "importHelpers": true,
    "noEmitHelpers": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "preserveConstEnums": false,
    "pretty": true,
    "strict": true,
    "strictFunctionTypes": false,
    "sourceMap": true,
    "outDir": "./wwwroot.tmp",
    "noEmitOnError": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "wwwrootsrc/**/*",
    "test/**/*",
    "typings/index.d.ts"
  ],
  "exclude": [
    "wwwrootsrc/core/scripts/pwa.serviceworker.ts"
  ]
}